---
import { Image } from "astro:assets";
import And from "./And.astro";

interface Props {
  title: string;
  description: string;
  techStack: string[];
  image: ImageMetadata;
}

const { title, description, techStack, image } = Astro.props;
---

<div
  class="h-64 w-80 bg-quarternary rounded-md py-4 px-5 relative bg-opacity-80 overflow-hidden"
>
  <Image
    src={image}
    alt="Project Image"
    class="absolute -z-10 top-0 left-0 w-full h-full object-cover rounded-md"
  />
  <h2 class="text-xl my-2 text-white font-bricolage tracking-wider font-bold">
    {title}
  </h2>
  <p class="font-bricolage">
    {description}
  </p>
  <p
    class="font-extralight text-sm font-trispace text-opacity-5 mb-4 absolute bottom-0 left-5 right-5"
  >
    {
      techStack.map((tech, index) => {
        return (
          <span>
            {tech}
            {index < techStack.length - 1 && <And />}
          </span>
        );
      })
    }
  </p>
</div>

---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import fotoroom from "../assets/projects/fotoroom.svg";
import wise from "../assets/projects/wise.png";
import hris from "../assets/projects/hris.svg";
import And from "../components/And.astro";
---

<Layout title="Projects">
  <main class="mt-20">
    <h1 class="text-2xl md:w-8/12 mx-auto">
      <span class="font-extralight"
        >&lt;<span class="text-red-500">section</span>&gt;</span
      >
      <span class="font-light font-trispace">Dive Into My Projects Ocean</span>
      <span class="font-extralight"
        >&lt;/<span class="text-red-500">section</span>&gt;</span
      >
    </h1>
    <div
      class="mt-28 grid grid-cols-1 md:grid-cols-2 justify-items-center md:justify-between gap-y-8"
    >
      <div
        class="h-64 w-80 bg-quarternary rounded-md py-4 px-5 relative bg-opacity-80 overflow-hidden"
      >
        <Image
          src={fotoroom}
          alt="Project Image"
          class="absolute -z-10 top-0 left-0 w-full h-full object-cover rounded-md"
        />
        <h2
          class="text-xl my-2 text-white font-bricolage tracking-wider font-bold"
        >
          Fotoroom
        </h2>
        <p class="font-bricolage">
          Payment app for self service photobooth, integrated with QRIS
        </p>
        <p
          class="font-extralight text-sm font-trispace text-opacity-5 mb-4 absolute bottom-0 left-5 right-5"
        >
          Nextron <And /> TypeScript <And /> TailwindCSS
        </p>
      </div>

      <div
        class="h-64 w-80 bg-quarternary rounded-md py-4 px-5 relative bg-opacity-80 overflow-hidden"
      >
        <Image
          src={wise}
          alt="Project Image"
          class="absolute -z-10 top-0 left-0 w-full h-full object-cover rounded-md"
        />
        <h2
          class="text-xl my-2 text-white font-bricolage tracking-wider font-bold"
        >
          Wise
        </h2>
        <p class="font-bricolage">Waluya Enterprise company profile website.</p>
        <p
          class="font-extralight text-sm font-trispace text-opacity-5 mb-4 absolute bottom-0 left-5 right-5"
        >
          Astro <And /> TailwindCSS
        </p>
      </div>
      <div
        class="h-64 w-80 bg-quarternary rounded-md py-4 px-5 relative bg-opacity-80 overflow-hidden"
      >
        <Image
          src={hris}
          alt="Project Image"
          class="absolute -z-10 top-0 left-0 w-full h-full object-cover rounded-md"
        />
        <h2
          class="text-xl my-2 text-white font-bricolage tracking-wider font-bold"
        >
          HRIS-REST-API
        </h2>
        <p class="font-bricolage">
          Human Resource Information System (HRIS) REST API
        </p>
        <p
          class="font-extralight text-sm font-trispace text-opacity-5 mb-4 absolute bottom-0 left-5 right-5"
        >
          Bun <And /> Hono <And /> Prisma <And /> Postgresql <And /> Docker
        </p>
      </div>
    </div>
  </main>
</Layout>
